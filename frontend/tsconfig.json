{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "types": ["jest", "node", "@testing-library/jest-dom", "@tanstack/react-table"],
    "paths": {
      "@shared-constants": ["shared-constants/index.ts"],
      "@shared-constants/*": ["shared-constants/*"],
      "@shared-constants/queryParams": ["shared-constants/queryParams.ts"],
      "@shared-constants/validation": ["shared-constants/validation.ts"],
      "@shared-constants/api": ["shared-constants/api.ts"]
    }
  },
  "include": ["src", "../shared-constants"]
}
