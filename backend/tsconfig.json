{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {}
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../shared-constants" }],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "../frontend",
    "../shared",
    "../**/__tests__/**",
    "../**/*.test.ts",
    "../**/*.spec.ts",
    "../node_modules/@types/react*"
  ]
}
