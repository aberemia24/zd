{
  "compilerOptions": {
    "composite": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "rootDir": "./src",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@budget-app/shared-constants/*": ["../shared-constants/dist/*"],
      "@budget-app/shared-constants": ["../shared-constants/dist/index.js"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../shared-constants" }],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "../frontend",
    "../shared",
    "../**/__tests__/**",
    "../**/*.test.ts",
    "../**/*.spec.ts",
    "../node_modules/@types/react*"
  ]
}
