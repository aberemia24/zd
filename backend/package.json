{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "pnpm run build && node -r tsconfig-paths/register dist/main.js",
    "start:dev": "nest start --watch",
    "dev": "nest start --watch",
    "dev:3001": "PORT=3001 nest start --watch",
    "dev:3002": "PORT=3002 nest start --watch",
    "dev:3003": "PORT=3003 nest start --watch",
    "dev:kill-port": "npx kill-port 3001 && nest start --watch",
    "build": "tsc",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@budget-app/shared-constants": "workspace:*",
    "@nestjs/common": "11.0.20",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.0.20",
    "@nestjs/mongoose": "11.0.3",
    "@nestjs/platform-express": "11.0.20",
    "@nestjs/testing": "11.0.20",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "firebase-admin": "^12.0.0",
    "mongoose": "^8.3.4",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
