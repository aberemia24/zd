{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["frontend/**/*"],
      "extends": ["./frontend/.eslintrc.json"]
    },
    {
      "files": ["backend/**/*"],
      "env": {
        "node": true
      }
    },
    {
      "files": ["scripts/**/*"],
      "env": {
        "node": true
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "*.config.js",
    "*.config.ts"
  ]
} 